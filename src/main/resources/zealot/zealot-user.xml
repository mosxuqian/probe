<?xml version="1.0" encoding="UTF-8"?>
<zealots>
    
    <!-- 根据动态条件查询用户信息 -->
    <zealot id="queryUserInfo">
        select * from user where
        <like field="nickname" value="nickName"></like>
        <andLike match="email != null and email != ''" field="email" value="email"></andLike>
        <andBetween match="startAge > 0 || endAge > 0" field="age" start="startAge" end="endAge"></andBetween>
        <andBetween match="startBirthday != null || endBirthday != ''" field="birthday" start="startBirthday" end="endBirthday"></andBetween>
        <andIn match="sexs != null || sexs.size() > 0" field="sex" value="sexs"></andIn>
        order by id desc 
    </zealot>
    
</zealots>